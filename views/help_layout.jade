    script.
      $.i18n.init({
        fallbackLng: 'en-US',
        useLocalStorage: false,
        debug: true,
        ns: {
          namespaces: [ 'app', 'nav', 'forms' ],
          defaultNs: 'app'
        }
      }, function () {
        if (window.DarkSolar) {
          DarkSolar.formValidatorsTranslation ();
        }

        $('body').i18n ();
      });

    .row
      .col-md-6.col-md-offset-3.col-xs-12.img-thumbnail.register-container
        .row
          .col-md-6
            div.btn-group.pull-left
              span.btn.btn-default#language Language
              a.btn.btn-default.dropdown-toggle(type="button",data-toggle="dropdown")
                span.caret
              ul.dropdown-menu(role="menu")
                li
                  a(tabindex="-1", href="?setLng=th") ไทย
                li
                  a(tabindex="-1", href="?setLng=en-US") English
