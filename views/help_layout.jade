            img(src="/images/cardlogo.png", width="180px")
        .row
          .col-md-12
            #content.container-fluid
            != body
    block help

    script.
      $(function () {
        if ($.i18n.lng() == "th") {
          $('#language').text("ไทย");
        } else {
          $('#language').text("English");
        }
      });
